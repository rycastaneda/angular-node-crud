doctype
html(lang='en', data-ng-app='app')
head
  meta(charset='UTF-8')
  title Document
  // inject-vendor:css
  link(rel='stylesheet', href='/build/css/vendor.min.css')
  // endinject
  style.
    /* This helps the ng-show/ng-hide animations start at the right place. */
    /* Since Angular has this but needs to load, this gives us the class early. */
    .ng-hide {
    display: none!important;
    }
  // inject:css
  link(rel='stylesheet', href='/build/css/styles.min.css')
  // endinject
body
  div
    div(data-ng-include="'layout/layout.tpl.html'")
    #splash-page(data-ng-show='false')
      .page-splash
        .page-splash-message
          p Loading
        .progress.progress-striped.active.page-progress-bar
          .bar
script.
  var user = #{user};
script(src='/build/js/vendor.min.js')
script(src='/build/js/scripts.min.js')
